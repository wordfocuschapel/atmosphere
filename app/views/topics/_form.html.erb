<%= form_for(@topic) do |f|  %>
  <% if @topic.errors.any?  %>
    <div id="error_explanation">
     <h2><%= pluralize(@topic.errors.count, "error") %>
       prohibited this topic from being saved:</h2>

     <ul>
       <% @topic.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
       <% end %>
     </ul>
    </div>
    <% end %>
    <p>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </p>
    <div class="field">
      <%= f.label :tag_list, "Tags (seperated by commas)" %><br /> 
      <%= f.text_field :tag_list %>
    </div> 
    <%= f.submit "Add Topic", :class => 'button [radius round alert]' %>
<% end %>
